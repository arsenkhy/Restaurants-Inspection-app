<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/natureofViolation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:maxWidth="65dp"
        android:maxHeight="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/severityIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.289"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/natureofViolation"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/severityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/severitytext"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/severityIcon"
        app:layout_constraintStart_toStartOf="@+id/severityIcon"
        app:layout_constraintTop_toBottomOf="@+id/severityIcon" />

    <TextView
        android:id="@+id/description"
        android:layout_width="213dp"
        android:layout_height="59dp"
        android:layout_marginStart="48dp"
        android:text="@string/description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/severityIcon"
        app:layout_constraintTop_toTopOf="@+id/severityIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>
